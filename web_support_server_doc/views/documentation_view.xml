                </tree>
            </field>
        </record>
        <record id="view_documentation_google_docform" model="ir.ui.view">
            <field name="name">website.doc.google_doc.form</field>
            <field name="model">website.doc.google_doc</field>
            <field name="inherit_id" ref="website_doc.view_documentation_google_docform"/>
            <field name="arch" type="xml">
                <group>
                    <field name="required_module_id"/>
                    <field name="external_id"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
